{
  "$schema": "http://json-schema.org/schema",
  "$id": "NxWorkspaceNpmPackage",
  "title": "Add a minimal npm package",
  "description": "Add a minimal npm package.",
  "cli": "nx",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "Package name.",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "What name of your npm package?",
      "pattern": "^[a-zA-Z].*$"
    }
  },
  "required": ["name"]
}
