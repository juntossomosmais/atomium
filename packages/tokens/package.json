{
  "name": "@juntossomosmais/atomium-tokens",
  "version": "0.1.0-alpha.18",
  "description": "Tokens and variables for Atomium",
  "access": "public",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/juntossomosmais/atomium.git",
    "directory": "packages/tokens"
  },
  "publishConfig": {
    "@juntossomosmais:registry": "https://npm.pkg.github.com",
    "access": "public"
  },
  "exports": {
    "./*": "./dist/*",
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "start": "rollup -c -w",
    "build:css": "rollup -c",
    "build:gen-tokens": "npx babel ./scripts/generate-tokens.ts --out-file ./dist/scripts/generate-tokens.js && node ./dist/scripts/generate-tokens.js",
    "build": "npm run build:css && npm run build:gen-tokens && rollup -c rollup.tokens.config.mjs && tsc && rimraf dist/scripts",
    "publish-library": "npm publish --access public"
  },
  "files": [
    "dist"
  ]
}
