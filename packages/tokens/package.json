{
  "name": "@juntossomosmais/atomium-tokens",
  "version": "1.0.0",
  "description": "Tokens and variables for Atomium",
  "access": "public",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/juntossomosmais/atomium.git",
    "directory": "packages/tokens"
  },
  "publishConfig": {
    "@juntossomosmais:registry": "https://npm.pkg.github.com",
    "access": "public"
  },
  "exports": {
    "./*": "./dist/*",
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "start": "rollup -c -w",
    "build:css": "rollup -c",
    "build": "npm run build:css && ts-node ./scripts/generate-tokens/index.ts && rollup -c rollup.tokens.config.mjs && tsc --module commonjs",
    "publish-library": "npm publish --access public",
    "test:ci": "jest --coverage --no-cache --updateSnapshot --ci",
    "test": "jest"
  },
  "files": [
    "dist"
  ]
}
