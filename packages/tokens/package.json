{
  "name": "@juntossomosmais/atomium-tokens",
  "version": "0.1.0-alpha.18",
  "description": "Tokens and variables for Atomium",
  "access": "public",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/types/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/juntossomosmais/atomium.git",
    "directory": "packages/tokens"
  },
  "publishConfig": {
    "@juntossomosmais:registry": "https://npm.pkg.github.com",
    "access": "public"
  },
  "exports": {
    "./*": "./dist/*",
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js"
    }
  },
  "scripts": {
    "start": "rollup -c -w",
    "build:gen-tokens": "npx babel ./scripts/generate-tokens.ts --out-file ./dist/scripts/generate-tokens.js && node ./dist/scripts/generate-tokens.js",
    "build:cjs": "tsc --module commonjs --outDir ./dist/cjs --declarationDir ./dist/types",
    "build:esm": "tsc --module es6 --outDir ./dist/esm --declarationDir ./dist/types",
    "build": "rollup -c && npm run build:gen-tokens && npm run build:cjs && npm run build:esm",
    "publish-library": "npm publish --access public"
  },
  "files": [
    "dist"
  ]
}
