{
  "name": "@juntossomosmais/atomium-react",
  "description": "React transpiled for Atomium",
  "private": true,
  "main": "dist/index.js",
  "types": "dist/types/index.d.ts",
  "files": [
    "dist/"
  ],
  "scripts": {
    "start": "tsc -p . --watch",
    "build": "nx build @juntossomosmais/atomium && npm run compile && npm run copy",
    "compile": "tsc -p tsconfig.json",
    "copy": "npx copyfiles --flat ./package.json ../core/react"
  },
  "nx": {
    "targets": {
      "build": {
        "dependsOn": [
          {
            "projects": [
              "@juntossomosmais/atomium"
            ],
            "target": "build"
          }
        ]
      },
      "start": {
        "dependsOn": [
          {
            "projects": [
              "@juntossomosmais/atomium"
            ],
            "target": "build"
          }
        ]
      }
    }
  },
  "dependencies": {
    "@stencil/react-output-target": "^1.2.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@babel/plugin-transform-modules-commonjs": "^7.27.1"
  },
  "peerDependencies": {
    "react": ">=17.0.0",
    "react-dom": ">=17.0.0"
  }
}
