{
  "name": "atomium",
  "description": "Atomium is a official design system of Juntos Somos Mais",
  "license": "MIT",
  "private": true,
  "npmClient": "npm",
  "engines": {
    "yarn": "please-use-npm",
    "npm": ">=8.x",
    "node": ">=18.16.0"
  },
  "workspaces": [
    "apps/*",
    "packages/*",
    "utils/*"
  ],
  "scripts": {
    "build": "nx build @juntossomosmais/atomium && nx build @juntossomosmais/atomium-react",
    "docs:build": "nx build @atomium/docs && nx build @atomium/docs-react",
    "docs-react:start": "nx run @atomium/docs-react:start",
    "icons:build": "nx build @juntossomosmais/atomium-icons",
    "postinstall": "nx run @juntossomosmais/atomium:prebuild",
    "pre-commit": "git rev-parse -q --no-revs --verify MERGE_HEAD || lint-staged",
    "prepare": "husky install",
    "start": "nx run-many --target=start --maxParallel=10 --projects=@juntossomosmais/*,@atomium/docs",
    "test": "nx run @juntossomosmais/atomium:test",
    "test:ci": "nx affected --target=test:ci --base=origin/main --parallel",
    "test:ci-merge": "nx affected --target=test:ci --base=origin/main~1 --head=origin/main --parallel",
    "tokens:build": "nx build @juntossomosmais/atomium-tokens"
  },
  "dependencies": {
    "@ionic/core": "^7.8.2",
    "@stencil/core": "^4.12.4",
    "swiper": "^11.0.7"
  },
  "devDependencies": {
    "@babel/core": "^7.24.3",
    "@babel/preset-env": "^7.24.0",
    "@babel/preset-react": "^7.23.3",
    "@babel/preset-typescript": "^7.24.1",
    "@commitlint/cli": "^19.0.3",
    "@commitlint/config-conventional": "^19.0.3",
    "@juntossomosmais/linters": "^0.18.1",
    "@nrwl/workspace": "18.0.6",
    "@rollup/plugin-typescript": "^11.1.6",
    "@stencil/react-output-target": "^0.5.3",
    "@stencil/sass": "^3.0.10",
    "@stencil/vue-output-target": "^0.8.7",
    "@storybook/addon-a11y": "^7.6.17",
    "@storybook/addon-docs": "^7.6.17",
    "@storybook/addon-essentials": "^7.6.17",
    "@storybook/addon-mdx-gfm": "^7.6.17",
    "@storybook/addons": "^7.6.17",
    "@storybook/preset-typescript": "^3.0.0",
    "@storybook/react": "^8.0.9",
    "@storybook/react-webpack5": "^7.6.17",
    "@storybook/theming": "^7.6.17",
    "@storybook/web-components": "^7.6.17",
    "@storybook/web-components-webpack5": "^7.6.17",
    "@testing-library/jest-dom": "^6.4.2",
    "@types/jest": "^27.0.3",
    "@types/node": "^20.11.24",
    "@types/react": "^18.2.61",
    "@types/react-dom": "^18.2.19",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "@typescript-eslint/parser": "^7.1.0",
    "autoprefixer": "^10.4.18",
    "babel-loader": "^9.1.3",
    "babel-plugin-transform-scss": "^1.2.0",
    "copyfiles": "^2.4.1",
    "eslint": "^8.57.0",
    "eslint-import-resolver-babel-plugin-root-import": "^1.1.1",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-sonarjs": "^0.24.0",
    "husky": "^9.0.11",
    "jest": "^27.0.3",
    "jest-cli": "^27.0.3",
    "lint-staged": "^15.2.2",
    "lit": "^3.1.2",
    "node-sass": "^9.0.0",
    "nx": "18.0.6",
    "postcss": "^8.4.35",
    "postcss-scss": "^4.0.9",
    "prettier": "3.2.5",
    "prop-types": "^15.8.1",
    "puppeteer": "^22.3.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rollup": "^4.12.0",
    "rollup-plugin-postcss": "^4.0.2",
    "rupture-sass": "^1.0.0",
    "sass": "^1.71.1",
    "sass-loader": "^14.1.1",
    "storybook": "^7.6.17",
    "stylelint": "^16.2.1",
    "stylelint-config-recommended": "^14.0.0",
    "stylelint-order": "^6.0.4",
    "stylelint-scss": "^6.1.0",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "tslib": "^2.6.2",
    "typescript": "^5.3.3",
    "vue": "^3.4.21"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --cache --fix"
    ],
    "*.scss": [
      "stylelint --fix"
    ]
  }
}
