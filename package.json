{
  "name": "atomium",
  "description": "Atomium is a official design system of Juntos Somos Mais",
  "license": "MIT",
  "private": true,
  "npmClient": "npm",
  "engines": {
    "yarn": "please-use-npm",
    "npm": ">=8.x",
    "node": ">=18.16.0"
  },
  "workspaces": [
    "apps/*",
    "packages/*",
    "utils/*"
  ],
  "scripts": {
    "build": "nx build @juntossomosmais/atomium && nx build @juntossomosmais/atomium-react && nx build @juntossomosmais/atomium-vue",
    "docs:build": "nx build @atomium/docs && nx build @atomium/docs-react && nx build @atomium/docs-vue",
    "docs-react:start": "nx run @atomium/docs-react:start",
    "docs-vue:start": "nx run @atomium/docs-vue:start",
    "icons:build": "nx build @juntossomosmais/atomium-icons",
    "postinstall": "nx run @juntossomosmais/atomium:prebuild",
    "pre-commit": "git rev-parse -q --no-revs --verify MERGE_HEAD || lint-staged",
    "prepare": "husky install",
    "start": "nx run-many --target=start --maxParallel=10 --projects=@juntossomosmais/*,@atomium/docs",
    "test": "nx run @juntossomosmais/atomium:test",
    "test:ci": "nx affected --target=test:ci --base=origin/main --parallel",
    "test:ci-merge": "nx affected --target=test:ci --base=origin/main~1 --head=origin/main --parallel",
    "tokens:build": "nx build @juntossomosmais/atomium-tokens"
  },
  "dependencies": {
    "@ionic/core": "^8.7.8",
    "@popperjs/core": "^2.11.8",
    "@stencil/core": "^4.38.2",
    "dompurify": "^3.3.0"
  },
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@babel/preset-env": "^7.28.5",
    "@babel/preset-react": "^7.28.5",
    "@babel/preset-typescript": "^7.28.5",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@juntossomosmais/linters": "^0.23.0",
    "@juntossomosmais/rupture-scss": "^1.1.0",
    "@nx/workspace": "^22.1.3",
    "@rollup/plugin-typescript": "^12.3.0",
    "@stencil/react-output-target": "0.5.3",
    "@stencil/sass": "^3.2.3",
    "@stencil/vue-output-target": "^0.11.8",
    "@storybook/addon-a11y": "^10.1.2",
    "@storybook/addon-docs": "^10.1.2",
    "@storybook/react-vite": "^10.1.2",
    "@storybook/vue3-vite": "^10.1.2",
    "@storybook/web-components-vite": "^10.1.2",
    "@testing-library/jest-dom": "^6.9.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.48.0",
    "@typescript-eslint/parser": "^8.31.1",
    "@vitejs/plugin-vue": "^6.0.2",
    "ajv": "^8.17.1",
    "autoprefixer": "^10.4.22",
    "babel-loader": "^10.0.0",
    "babel-plugin-transform-scss": "^1.2.0",
    "copyfiles": "^2.4.1",
    "cssnano": "^7.1.2",
    "eslint": "^8.57.0",
    "eslint-import-resolver-node": "^0.3.9",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-sonarjs": "^3.0.5",
    "eslint-plugin-storybook": "10.1.2",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "jest-cli": "^30.2.0",
    "lint-staged": "^16.2.7",
    "lit": "^3.3.1",
    "nx": "22.1.3",
    "postcss": "^8.5.3",
    "postcss-scss": "^4.0.9",
    "prettier": "3.7.3",
    "prop-types": "^15.8.1",
    "puppeteer": "^24.31.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "remark-gfm": "^4.0.1",
    "rollup": "^4.53.3",
    "rollup-plugin-postcss": "^4.0.2",
    "sass": "^1.94.2",
    "sass-loader": "^16.0.6",
    "storybook": "^10.0.5",
    "stylelint": "^16.26.1",
    "stylelint-config-recommended": "^17.0.0",
    "stylelint-order": "^7.0.0",
    "stylelint-scss": "^6.11.1",
    "svgo": "^4.0.0",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "tslib": "^2.8.1",
    "typescript": "^5.9.3",
    "vite": "^7.2.6",
    "vue": "^3.5.25"
  },
  "optionalDependencies": {
    "@rollup/rollup-linux-x64-gnu": "4.52.5",
    "sass-embedded-darwin-arm64": "^1.93.3",
    "sass-embedded-linux-x64": "^1.93.3"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --cache --fix"
    ],
    "*.scss": [
      "stylelint --fix"
    ]
  }
}
