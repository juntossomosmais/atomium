{
  "name": "atomium",
  "description": "Atomium is a official design system of Juntos Somos Mais",
  "license": "MIT",
  "private": true,
  "npmClient": "npm",
  "engines": {
    "yarn": "please-use-npm",
    "npm": ">=8.x",
    "node": ">=18.16.0"
  },
  "workspaces": [
    "apps/*",
    "packages/*",
    "utils/*"
  ],
  "scripts": {
    "build": "nx build @juntossomosmais/atomium && nx build @juntossomosmais/atomium-react",
    "docs:build": "nx build @atomium/docs && nx build @atomium/docs-react",
    "docs-react:start": "nx run @atomium/docs-react:start",
    "icons:build": "nx build @juntossomosmais/atomium-icons",
    "postinstall": "nx build @juntossomosmais/atomium:prebuild",
    "pre-commit": "git rev-parse -q --no-revs --verify MERGE_HEAD || lint-staged",
    "prepare": "husky install",
    "start": "nx run-many --target=start --maxParallel=10 --projects=@juntossomosmais/*,@atomium/docs",
    "test": "nx run @juntossomosmais/atomium:test",
    "test:ci": "nx affected --target=test:ci --base=origin/main --parallel",
    "test:ci-merge": "nx affected --target=test:ci --base=origin/main~1 --head=origin/main --parallel",
    "tokens:build": "nx build @juntossomosmais/atomium-tokens"
  },
  "dependencies": {
    "@ionic/core": "^7.7.3",
    "@stencil/core": "^4.12.3",
    "swiper": "^11.0.6"
  },
  "devDependencies": {
    "@babel/core": "^7.24.0",
    "@babel/preset-env": "^7.23.5",
    "@babel/preset-react": "^7.22.5",
    "@babel/preset-typescript": "^7.23.2",
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^17.6.6",
    "@juntossomosmais/linters": "^0.15.0",
    "@nrwl/workspace": "16.6.0",
    "@rollup/plugin-typescript": "^11.1.2",
    "@stencil/react-output-target": "^0.5.3",
    "@stencil/sass": "^3.0.4",
    "@stencil/vue-output-target": "^0.8.6",
    "@storybook/addon-a11y": "^7.6.3",
    "@storybook/addon-docs": "^7.6.12",
    "@storybook/addon-essentials": "^7.6.3",
    "@storybook/addon-mdx-gfm": "^7.6.12",
    "@storybook/addons": "^7.6.3",
    "@storybook/preset-typescript": "^3.0.0",
    "@storybook/react": "^7.6.3",
    "@storybook/react-webpack5": "^7.6.3",
    "@storybook/theming": "^7.6.12",
    "@storybook/web-components": "^7.6.3",
    "@storybook/web-components-webpack5": "^7.6.12",
    "@testing-library/jest-dom": "^6.1.4",
    "@types/jest": "^27.0.3",
    "@types/node": "^20.8.0",
    "@types/react": "^18.2.51",
    "@types/react-dom": "^18.2.18",
    "@typescript-eslint/eslint-plugin": "^6.9.1",
    "@typescript-eslint/parser": "^6.16.0",
    "autoprefixer": "^10.4.16",
    "babel-loader": "^9.1.3",
    "babel-plugin-transform-scss": "^1.2.0",
    "copyfiles": "^2.4.1",
    "eslint": "^8.45.0",
    "eslint-import-resolver-babel-plugin-root-import": "^1.1.1",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-sonarjs": "^0.19.0",
    "husky": "^8.0.3",
    "jest": "^27.0.3",
    "jest-cli": "^29.7.0",
    "lint-staged": "^14.0.1",
    "lit": "^3.1.2",
    "node-sass": "^9.0.0",
    "nx": "16.5.2",
    "postcss": "^8.4.31",
    "postcss-scss": "^4.0.6",
    "prettier": "3.0.0",
    "prop-types": "^15.8.1",
    "puppeteer": "^22.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rollup": "^3.26.3",
    "rollup-plugin-postcss": "^4.0.2",
    "rupture-sass": "^1.0.0",
    "sass": "^1.70.0",
    "sass-loader": "^13.3.2",
    "storybook": "^7.6.3",
    "stylelint": "^15.10.1",
    "stylelint-config-recommended": "^13.0.0",
    "stylelint-order": "^6.0.3",
    "stylelint-scss": "^5.3.2",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "tslib": "^2.6.1",
    "typescript": "^5.1.6",
    "vue": "^3.3.4"
  },
  "optionalDependencies": {
    "@nx/nx-darwin-arm64": "17.2.8",
    "@nx/nx-darwin-x64": "17.3.1",
    "@nx/nx-linux-x64-gnu": "17.2.8",
    "@nx/nx-win32-x64-msvc": "17.2.8"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --cache --fix"
    ],
    "*.scss": [
      "stylelint --fix"
    ]
  }
}
