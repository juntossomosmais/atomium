{
  "name": "atomium-ds",
  "version": "0.0.0",
  "license": "MIT",
  "private": true,
  "npmClient": "npm",
  "engines": {
    "node": "16.x"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "components:build": "nx run atomium:build",
    "components:start": "nx run atomium:start",
    "lint:pre-commit": "eslint --resolve-plugins-relative-to . -c  ./.eslintrc.json $(git diff --cached --name-only --diff-filter=AM | grep  -E \"(.js$|.ts$)\") --cache --cache-location node_modules/.cache/eslint",
    "lint:pre-push": "eslint --resolve-plugins-relative-to . -c  ./.eslintrc.json $(git diff --name-only --diff-filter=AM master | grep  -E \"(.js$|.ts$)\") --cache --cache-location node_modules/.cache/eslint",
    "lint:styles": "stylelint '**/*.styles.ts'",
    "postinstall": "npx husky install && nx run atomium:build",
    "pre-commit": "lint-staged",
    "prepare": "husky install",
    "start": "nx run-many --target=start",
    "storybook:build": "nx run storybook:build",
    "test": "nx run atomium:test"
  },
  "dependencies": {
    "@stencil/core": "^3.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.20.12",
    "@commitlint/cli": "^17.4.4",
    "@commitlint/config-conventional": "^17.4.4",
    "@ionic/core": "^6.5.3",
    "@nrwl/cli": "15.7.0",
    "@nrwl/eslint-plugin-nx": "^15.7.1",
    "@nrwl/storybook": "^15.7.0",
    "@nrwl/workspace": "15.7.0",
    "@stencil/react-output-target": "^0.4.0",
    "@stencil/vue-output-target": "^0.7.0",
    "@storybook/addon-actions": "^6.5.16",
    "@storybook/addon-docs": "^6.5.16",
    "@storybook/addon-essentials": "^6.5.16",
    "@storybook/addon-interactions": "^6.5.16",
    "@storybook/addon-knobs": "^6.4.0",
    "@storybook/addon-links": "^6.5.16",
    "@storybook/addon-notes": "^5.3.21",
    "@storybook/addon-viewport": "^6.5.16",
    "@storybook/addons": "^6.5.16",
    "@storybook/builder-webpack4": "^6.5.16",
    "@storybook/html": "^6.5.16",
    "@storybook/manager-webpack4": "^6.5.16",
    "@storybook/preset-typescript": "^3.0.0",
    "@storybook/testing-library": "^0.0.13",
    "@storybook/theming": "^6.5.16",
    "@testing-library/jest-dom": "^5.16.5",
    "@types/jest": "^27.5.2",
    "@types/node": "^16.18.11",
    "@typescript-eslint/eslint-plugin": "^5.52.0",
    "@typescript-eslint/parser": "^5.52.0",
    "babel-loader": "^8.3.0",
    "eslint": "^8.34.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-import-resolver-babel-plugin-root-import": "^1.1.1",
    "eslint-import-resolver-typescript": "^3.5.3",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-sonarjs": "^0.18.0",
    "husky": "^8.0.3",
    "jest": "^27.5.1",
    "jest-cli": "^27.5.1",
    "lint-staged": "^13.1.2",
    "nx": "15.7.0",
    "prettier": "2.8.4",
    "pretty-quick": "^3.1.3",
    "puppeteer": "^19.7.2",
    "stylelint": "^15.1.0",
    "stylelint-config-recommended": "^10.0.1",
    "stylelint-order": "^6.0.2",
    "ts-jest": "^29.0.5",
    "typescript": "^4.9.5"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "npx prettier --check",
      "npm run lint:pre-commit",
      "npm run lint:styles"
    ],
    "*.scss": [
      "stylelint"
    ]
  },
  "lint-prepush": {
    "tasks": {
      "*.{js,jsx,ts,tsx}": [
        "pretty-quick --staged",
        "npm run lint:pre-push"
      ],
      "*.scss": [
        "stylelint"
      ]
    }
  }
}
