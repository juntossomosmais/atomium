{
  "name": "atomium",
  "description": "Atomium is a official design system of Juntos Somos Mais",
  "license": "MIT",
  "private": true,
  "npmClient": "npm",
  "engines": {
    "yarn": "please-use-npm",
    "npm": ">=8.x",
    "node": ">=16.x"
  },
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "core:build": "nx build @juntossomosmais/atomium:build && nx build @juntossomosmais/atomium-react:build",
    "core:publish": "npm run core:build && nx run @juntossomosmais/atomium:publish && nx run @juntossomosmais/atomium-react:publish",
    "lint:pre-commit": "eslint --resolve-plugins-relative-to . -c  ./.eslintrc.json $(git diff --cached --name-only --diff-filter=AM | grep  -E \"(.js$|.ts$)\") --cache --cache-location node_modules/.cache/eslint",
    "lint:styles": "stylelint '**/*.scss'",
    "postinstall": "npx husky install && npm run core:build && npm run tokens:build",
    "pre-commit": "lint-staged",
    "prepare": "husky install",
    "start": "npm run core:build && nx run-many --target=start",
    "docs:build": "nx run atomium-docs:build",
    "test": "nx run atomium:test",
    "tokens:build": "nx build @juntossomosmais/atomium-tokens:build",
    "tokens:publish": "npm run tokens:build && nx run @juntossomosmais/atomium-tokens:publish"
  },
  "dependencies": {
    "@stencil/core": "^3.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.20.12",
    "@babel/preset-env": "^7.21.4",
    "@babel/preset-react": "^7.18.6",
    "@babel/preset-typescript": "^7.21.4",
    "@commitlint/cli": "^17.4.4",
    "@commitlint/config-conventional": "^17.4.4",
    "@ionic/core": "^7.0.1",
    "@nrwl/cli": "15.9.2",
    "@nrwl/eslint-plugin-nx": "^15.7.1",
    "@nrwl/storybook": "^15.9.2",
    "@nrwl/workspace": "15.9.2",
    "@stencil/react-output-target": "^0.4.0",
    "@stencil/sass": "^3.0.0",
    "@stencil/vue-output-target": "^0.7.0",
    "@storybook/addon-a11y": "^7.0.1",
    "@storybook/addon-docs": "^7.0.1",
    "@storybook/addon-essentials": "^7.0.1",
    "@storybook/addon-mdx-gfm": "^7.0.2",
    "@storybook/addons": "^7.0.1",
    "@storybook/html": "^7.0.1",
    "@storybook/html-webpack5": "^7.0.2",
    "@storybook/preset-typescript": "^3.0.0",
    "@storybook/theming": "^7.0.1",
    "@testing-library/jest-dom": "^5.16.5",
    "@types/jest": "^27.5.2",
    "@types/node": "^18.15.11",
    "@types/react": "^18.0.28",
    "@typescript-eslint/eslint-plugin": "^5.52.0",
    "@typescript-eslint/parser": "^5.52.0",
    "autoprefixer": "^10.4.14",
    "babel-loader": "^9.1.2",
    "babel-plugin-transform-scss": "^1.2.0",
    "copyfiles": "^2.4.1",
    "eslint": "^8.34.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-import-resolver-babel-plugin-root-import": "^1.1.1",
    "eslint-import-resolver-typescript": "^3.5.3",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-sonarjs": "^0.18.0",
    "husky": "^8.0.0",
    "jest": "^27.5.1",
    "jest-cli": "^27.5.1",
    "lint-staged": "^13.1.2",
    "node-sass": "^8.0.0",
    "nx": "15.7.0",
    "postcss": "^8.4.21",
    "postcss-scss": "^4.0.6",
    "prettier": "2.8.4",
    "pretty-quick": "^3.1.3",
    "puppeteer": "^19.8.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rollup": "^3.20.2",
    "rollup-plugin-postcss": "^4.0.2",
    "rupture-sass": "^1.0.0",
    "sass": "^1.60.0",
    "sass-loader": "^13.2.2",
    "storybook": "^7.0.2",
    "stylelint": "^15.1.0",
    "stylelint-config-recommended": "^10.0.1",
    "stylelint-order": "^6.0.2",
    "stylelint-scss": "^4.6.0",
    "ts-jest": "^29.0.5",
    "typescript": "^4.9.5"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "npx prettier --check",
      "npm run lint:pre-commit"
    ],
    "*.scss": [
      "npm run lint:styles"
    ]
  }
}
