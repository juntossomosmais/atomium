{
  "name": "atomium-ds",
  "version": "0.0.0",
  "license": "MIT",
  "private": true,
  "npmClient": "npm",
  "engines": {
    "node": "16.x"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "lib:build": "nx run atomium:build && nx run atomium-react:build",
    "lint:pre-commit": "eslint --resolve-plugins-relative-to . -c  ./.eslintrc.json $(git diff --cached --name-only --diff-filter=AM | grep  -E \"(.js$|.ts$)\") --cache --cache-location node_modules/.cache/eslint",
    "lint:styles": "stylelint '**/*.scss'",
    "postinstall": "npx husky install && npm run lib:build && npm run tokens:build",
    "pre-commit": "lint-staged",
    "prepare": "husky install",
    "start": "nx run-many --target=start",
    "storybook:build": "nx run atomium-storybook:build",
    "test": "nx run atomium:test",
    "tokens:build": "nx run atomium-tokens:build"
  },
  "dependencies": {
    "@stencil/core": "^3.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.20.12",
    "@commitlint/cli": "^17.4.4",
    "@commitlint/config-conventional": "^17.4.4",
    "@ionic/core": "^6.5.3",
    "@nrwl/cli": "15.7.0",
    "@nrwl/eslint-plugin-nx": "^15.7.1",
    "@nrwl/storybook": "^15.7.0",
    "@nrwl/workspace": "15.7.0",
    "@stencil/react-output-target": "^0.4.0",
    "@stencil/vue-output-target": "^0.7.0",
    "@storybook/addon-actions": "^6.5.16",
    "@storybook/addon-docs": "^6.5.16",
    "@storybook/addon-essentials": "^6.5.16",
    "@storybook/addon-interactions": "^6.5.16",
    "@storybook/addon-knobs": "^6.4.0",
    "@storybook/addon-links": "^6.5.16",
    "@storybook/addon-notes": "^5.3.21",
    "@storybook/addon-viewport": "^6.5.16",
    "@storybook/addons": "^6.5.16",
    "@storybook/builder-webpack4": "^6.5.16",
    "@storybook/html": "^6.5.16",
    "@storybook/manager-webpack4": "^6.5.16",
    "@storybook/preset-typescript": "^3.0.0",
    "@storybook/testing-library": "^0.0.13",
    "@storybook/theming": "^6.5.16",
    "@testing-library/jest-dom": "^5.16.5",
    "@types/jest": "^27.5.2",
    "@types/node": "^16.18.11",
    "@types/react": "^18.0.28",
    "@typescript-eslint/eslint-plugin": "^5.52.0",
    "@typescript-eslint/parser": "^5.52.0",
    "autoprefixer": "^10.4.14",
    "babel-loader": "^8.3.0",
    "eslint": "^8.34.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-import-resolver-babel-plugin-root-import": "^1.1.1",
    "eslint-import-resolver-typescript": "^3.5.3",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-sonarjs": "^0.18.0",
    "husky": "^8.0.0",
    "jest": "^27.5.1",
    "jest-cli": "^27.5.1",
    "lint-staged": "^13.1.2",
    "node-sass": "^8.0.0",
    "nx": "15.7.0",
    "postcss-scss": "^4.0.6",
    "prettier": "2.8.4",
    "pretty-quick": "^3.1.3",
    "puppeteer": "^19.5.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rollup": "^3.20.2",
    "rollup-plugin-postcss": "^4.0.2",
    "rupture-sass": "^0.3.0",
    "sass-loader": "^13.2.2",
    "stylelint": "^15.1.0",
    "stylelint-config-recommended": "^10.0.1",
    "stylelint-order": "^6.0.2",
    "stylelint-scss": "^4.6.0",
    "ts-jest": "^29.0.5",
    "typescript": "^4.9.5"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "npx prettier --check",
      "npm run lint:pre-commit"
    ],
    "*.scss": [
      "npm run lint:styles"
    ]
  }
}
